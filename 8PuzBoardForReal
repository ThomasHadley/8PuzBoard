document.write("<br>")
document.write(tilefour + " " + tilefive + " " + tilesix);
document.write("<br>")
document.write(tileseven + " " + tileeight + " " + tilenine);

pieceloc = 1;

for(x=0; x<9; x++)
	{
    	if(current.charAt(x) != "9")
        	{
            pieceloc = pieceloc + 1;
            }
        if(current.charAt(x) == "9")
        	{
            maintile = pieceloc;
            }
     }
     
alert("Move piece is on tile " + maintile);
    
possibleMoves = availableMoves(maintile)
    
//alert("Possible moves are" + possibleMoves.charAt(0) + " " + possibleMoves.charAt(1) + " " + possibleMoves.charAt(2) + " " + possibleMoves.charAt(3) + " ");
    








